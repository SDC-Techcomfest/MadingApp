<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.HomeActivity">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <nl.joery.animatedbottombar.AnimatedBottomBar
            android:id="@+id/bottomNavigation_Home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:abb_iconSize="40dp"
            app:abb_indicatorAppearance="round"
            app:abb_indicatorColor="@color/teal_200"
            app:abb_indicatorHeight="4dp"
            app:abb_indicatorLocation="bottom"
            app:abb_indicatorMargin="20dp"
            app:abb_selectedTabType="text"
            app:abb_tabColor="#434343"
            app:abb_tabColorSelected="#116CCD"
            app:abb_tabs="@menu/bottom_menu" />
    </LinearLayout>

</LinearLayout>