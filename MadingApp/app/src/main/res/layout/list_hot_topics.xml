<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:layout_margin="20dp"
    android:gravity="top"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvRankHotTopics_listHotTopics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/allerta"
        android:shadowColor="@color/black"
        android:text="#1"
        android:textSize="30sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView_listHotTopics"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_placeholder" />

            <TextView
                android:id="@+id/tvTitle_listHotTopics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="161dp"
                android:fontFamily="@font/allerta"
                android:text="@string/title"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCreatedDate_listHotTopics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="161dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/allerta"
                android:text="31 Desember 2021"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvAuthor_listHotTopics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="190dp"
                android:fontFamily="@font/allerta"
                android:text="Author"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvDescription_listHotTopics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="213dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/allerta"
                android:maxLines="3"
                android:text="@string/description"
                android:textSize="13sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>